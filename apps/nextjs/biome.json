{
  "$schema": "https://biomejs.dev/schemas/2.0.0/schema.json",
  "extends": ["./../../biome.json"],
  "files": {
    "includes": [
      "./biome.json",
      "./package.json",
      "./src/**/*.{tsx,ts,css}",
      "./postcss.config.mjs",
      "./next.config.js",
      "!src/types/generated/sanity-types-generated.ts"
    ]
  },
  "linter": {
    "rules": {
      "a11y": {
        "noStaticElementInteractions": "off"
      },
      "performance": {
        "noImgElement": "off"
      },
      "correctness": {
        "useHookAtTopLevel": "error",
        "useExhaustiveDependencies": "error"
      }
    }
  }
}
